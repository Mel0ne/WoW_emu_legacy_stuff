+                                                Talk(EMOTE_PHYSICAL_OUT_PHYSICAL, player->GetGUID());
+                                        }
+                                    }
+                                }
+                            }
+                            _events.ScheduleEvent(EVENT_CHECK_CORPOREALITY, 15000);
+                            break;
+                        }
+                        default:
+                            break;
+                    }
+                }
+            }
+
+            void SetData(uint32 id, uint32 value)
+            {
+                switch (id)
+                {
+                    case DATA_MATERIAL_DAMAGE_TAKEN:
